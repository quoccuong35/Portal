@model Portal.ViewModels.AccountLoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    @{
        ViewBag.Title = LanguageResource.Permission_Login;
        Layout = null;
    }
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/Areas/Permission/Content/LoginForm/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Areas/Permission/Content/LoginForm/css/main.css">
    <style>
        .validation-summary-errors {
            color:red;
        }
    </style>
</head>
<body>

    <div class="limiter" id="from-login-error">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="/Images/img-01.png" alt="IMG">
                </div>

                @using (Html.BeginForm(ConstAction.Login, ConstController.Auth, FormMethod.Post, new { @class = "login100-form validate-form", @id = "frmLogin" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @id = "login-validation" })
                    @Html.HiddenFor(p => p.ReturnUrl)
                    <span class="login100-form-title">
                        @ViewBag.Title
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Vui lòng nhập thông tin tài khoản!">
                        @*<input class="input100" type="text" name="email" placeholder="Email">*@
                        @Html.TextBoxFor(p => p.UserName, new { @placeholder = LanguageResource.UserName, @class = "input100" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Vui lòng nhập mật khẩu của bạn!">
                        @Html.TextBoxFor(p => p.Password, new { @type = "password", @placeholder = LanguageResource.Password, @class = "input100" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="text-center p-t-12 remember">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(p => p.RememberMe, new { @class = "checkbox-login" })
                                | @LanguageResource.RememberMe
                            </label>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="@LanguageResource.Btn_Login" />
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            Quên mật khẩu
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="/Areas/Permission/Content/LoginForm/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="/Areas/Permission/Content/LoginForm/vendor/bootstrap/js/popper.js"></script>
    <script src="/Areas/Permission/Content/LoginForm/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Areas/Permission/Content/LoginForm/vendor/select2/select2.min.js"></script>
    <script src="/Areas/Permission/Content/LoginForm/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>
    <script src="/Areas/Permission/Content/LoginForm/js/main.js"></script>
</body>
</html>