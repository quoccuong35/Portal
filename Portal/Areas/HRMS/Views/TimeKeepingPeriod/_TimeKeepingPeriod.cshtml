@model TimeKeepingPeriodModel
<div class="row">
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.FromDate)
        @Html.RequiredDateboxFor(p => p.FromDate, new { htmlAttributes = new { @class = "form-control", type = "date"} })
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.ToDate)
        @Html.RequiredDateboxFor(p => p.ToDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.Type)
        @Html.RequiredDropDownListFor(p => p.Type, null, LanguageResource.Dropdownlist_All, new { @class = "form-control" })
    </div>
    <div class="col-md-3">
        @Html.TooltipLabelForRequired(p => p.Actived)
        @Html.ActivedRadioButton(p => p.Actived)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.TooltipLabelForRequired(p => p.Descriptions)
        @Html.TextAreaFor(p => p.Descriptions, new { @class = "form-control" })
    </div>
</div>