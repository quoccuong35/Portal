@model ShiftWork
<div class="row">
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.ShiftWorkCode)
        @Html.RequiredTextboxFor(p => p.ShiftWorkCode, new { @class = "form-control" })
    </div>
    <div class="col-lg-9">
        @Html.TooltipLabelForRequired(p => p.ShiftWorkName)
        @Html.RequiredTextboxFor(p => p.ShiftWorkName, new { @class = "form-control" })
    </div>
   
</div>
<div class="row">
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.StartTime)
        @Html.RequiredTextboxFor(p => p.StartTime, new { @class = "form-control time2" })
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.EndTimeBetweenShift)
        @Html.RequiredTextboxFor(p => p.EndTimeBetweenShift, new { @class = "form-control time2" })
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.StartTimeBetweenShift)
        @Html.RequiredTextboxFor(p => p.StartTimeBetweenShift, new { @class = "form-control time2" })
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.EndTime)
        @Html.RequiredTextboxFor(p => p.EndTime, new { @class = "form-control time2" })
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.OvertimeStartTime)
        @Html.RequiredTextboxFor(p => p.OvertimeStartTime, new { @class = "form-control time2" })
    </div>
    <div class="col-md-3">
        @Html.TooltipLabelForRequired(p => p.StandardHour)
        @Html.RequiredTextboxFor(p => p.StandardHour, new { @class = "form-control", @type = "number" })
    </div>
    <div class="col-md-3">
        @Html.TooltipLabelForRequired(p => p.TotalWorkTime)
        @Html.RequiredTextboxFor(p => p.TotalWorkTime, new { @class = "form-control", @type = "number"})
    </div>
    <div class="col-md-3">
        @Html.TooltipLabelForRequired(p => p.NumberMinuteLate)
        @Html.RequiredTextboxFor(p => p.NumberMinuteLate, new { @class = "form-control", @type = "number" })
    </div>
</div>
<div class="row">

    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.Actived)
        @Html.ActivedRadioButton(p => p.Actived)
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.OrderIndex)
        @Html.RequiredTextboxFor(p => p.OrderIndex, new { @class = "form-control" })
    </div>
    <div class="col-lg-3">
        @Html.TooltipLabelForRequired(p => p.IsNightShift)
        @Html.CheckBoxFor(p => p.IsNightShift, new { @class = "form-check" })
    </div>
   
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.TooltipLabelForRequired(p => p.Description)
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
    </div>
</div>
