@model IEnumerable<LeaveCategory>
@{
    string CurrentController = ConstController.LeaveCategory;

    string CurrentArea = ConstArea.MasterData;
}
<table id="data-list" class="table table-head-fixed text-nowrap">
    <thead>
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.LeaveCategoryCode)</th>
            <th>@Html.DisplayNameFor(p => p.LeaveCategoryName)</th>
            <th>@Html.DisplayNameFor(p => p.Description)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.LeaveCategoryCode)</td>
                <td>@Html.DisplayFor(p => item.LeaveCategoryName)</td>
                <th>@Html.DisplayFor(p => item.Description)</th>
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.LeaveCategoryId)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.LeaveCategoryName, item.LeaveCategoryId)
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(function () {
        Portal.TableEdit();
    });
</script>