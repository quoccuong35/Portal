@model ConfirmWorkingTimeViewModel

@Html.Partial("~/Areas/HRMS/Views/EmployeeInfo/_EmployeeInfo.cshtml", Model.Employee)
<div class="row">
    <div class="col-lg-4">
        @Html.TooltipLabelForRequired(it => it.Date1)
        @Html.RequiredDateboxFor(it => it.Date1, new { htmlAttributes = new { @class = "form-control", type = "date" } })
    </div>
    <div class="col-lg-4">
        @Html.TooltipLabelForRequired(it => it.Type1)
        @Html.RequiredDropDownListFor(it => it.Type1, null, LanguageResource.Dropdownlist_All, new { @class = "form-control", @onchange = "ChangeTypeTime(this)" })
    </div>
    <div class="col-lg-4">
        @Html.TooltipLabelForRequired(it => it.Time1)
        @Html.RequiredTextboxFor(p => p.Time1, new { @class = "form-control time2" })
    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        @Html.TooltipLabelForRequired(it => it.Reason)
        @Html.RequiredTextboxFor(it => it.Reason, new { @class = "form-control" })
    </div>
</div>