@model IEnumerable<Bank>
@{
    string CurrentController = ConstController.Bank;

    string CurrentArea = ConstArea.MasterData;
}
<table id="data-list" class="table table-head-fixed text-nowrap">
    <thead>
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.BankCode)</th>
            <th>@Html.DisplayNameFor(p => p.BankName)</th>
            <th>@Html.DisplayNameFor(p => p.Description)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td class="text-center">@i</td>
            <td>@Html.DisplayFor(p => item.BankCode)</td>
            <td>@Html.DisplayFor(p => item.BankName)</td>
            <th>@Html.DisplayFor(p => item.Description)</th>
            <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
            <td class="text-center">
                @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.BankId)
                @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.BankName, item.BankId)
            </td>
        </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(function () {
        Portal.TableEdit();
    });
</script>