@model OvertimeViewModel
<div class="row">
    <div class="col-lg-4">
        @Html.TooltipLabelForRequired(p => p.DepartmentID)
        @Html.RequiredDropDownListFor(p => p.DepartmentID, null, LanguageResource.Dropdownlist_All, new { @class = "form-control with-search" })
    </div>
    <div class="col-lg-4">
        @Html.TooltipLabelForRequired(p => p.ProjectID)
        @Html.RequiredTextboxFor(it => it.ProjectID, new { @class = "form-control" })
    </div>
    <div class="col-lg-4">
        @Html.TooltipLabelForRequired(p => p.OvertimeDay)
        @Html.RequiredDateboxFor(p => p.OvertimeDay, new { htmlAttributes = new { @class = "form-control", type = "date" } })
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @Html.TooltipLabelForRequired(p => p.OvertimeStartTime)
        @Html.RequiredTextboxFor(p => p.OvertimeStartTime, new { @class = "form-control time2" })
    </div>
    <div class="col-lg-6">
        @Html.TooltipLabelForRequired(p => p.OvertimeEndTime)
        @Html.RequiredTextboxFor(p => p.OvertimeEndTime, new { @class = "form-control time2" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.TooltipLabelForRequired(it=>it.Reason)
        @Html.RequiredTextboxFor(it=>it.Reason,new { @class = "form-control" })
    </div>
</div>