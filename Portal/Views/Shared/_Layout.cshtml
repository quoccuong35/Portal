<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal- @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/images/logo.png" />
    <link rel="stylesheet" href="~/Content/notify.css" />

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dataTables")
    @Styles.Render("~/Content/icons")
    @RenderSection("CSSFile", required: false)
    <style>
        .content-wrapper {
            position: relative;
            background-image: url('/Images/background.png');
            margin-top: 58px;
        }

        .select2-selection__rendered {
            line-height: 37px !important;
        }

        .select2-container .select2-selection--single {
            height: 37px !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            margin-top: -6px;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-navy fixed-top">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <!-- SEARCH FORM -->
            <form class="form-inline ml-3">
                <div class="input-group input-group-sm">
                    <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell fs-24"></i>
                        <span class="badge badge-warning navbar-badge">15</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">15 Notifications</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-envelope mr-2"></i> 4 new messages
                            <span class="float-right text-muted text-sm">3 mins</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-users mr-2"></i> 8 friend requests
                            <span class="float-right text-muted text-sm">12 hours</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-file mr-2"></i> 3 new reports
                            <span class="float-right text-muted text-sm">2 days</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
                    </div>
                </li>
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user fs-24"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="fs-25 text-center text-blue text-bold ">Thông tin người dùng</div>

                        <div class="dropdown-divider"></div>
                        <div class="row">
                            @if (CurrentUser != null)
                            {
                                <div class="col-8">
                                    <h2 class="lead"><b>@CurrentUser.FullName</b></h2>

                                    <p class="text-muted text-sm"><i class="fas fa-lg fa-building"></i>: @CurrentUser.Department </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg nav-icon far fa-envelope"></i></span>: @CurrentUser.Email</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mobile"></i></span>: @CurrentUser.MobilePhone</li>
                                    </ul>
                                </div>
                                <div class="col-4 text-center">
                                    <img src="@CurrentUser.Avatar" alt="" class="img-lg">
                                </div>
                            }

                        </div>
                        <div class="dropdown-divider"></div>
                        <a href="/Permission/Auth/Logout" class="btn btn-sm btn-block bg-gradient-danger font-weight-bolder py-3 px-5">
                            <i class="fa fa-sign-out"></i> <span class="text-bold" style="font-size:20px">Đăng xuất</span>
                        </a>
                    </div>
                </li>

            </ul>
        </nav>


        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        @Html.Action("_Sidebar", "Shared", new { area = "" })

        @RenderBody()
        @Html.Partial("./Partials/_Footer")
    </div>
    @Html.Partial("./Partials/_ImportModalPartial")
    @Html.Partial("./Partials/_DeleteModalPartial")
    @Html.Partial("./Partials/_SendEmailModalPartial")

    @Scripts.Render("~/Scripts/libs")
    <!--Select2-->
    @*dataTable*@
    @Scripts.Render("~/Scripts/dataTables")

    <script src="~/Scripts/common/PortalCommon.js"></script>
    <script src="~/Scripts/notify.js"></script>


    @RenderSection("ScriptsFile", required: false)
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("CustomScripts", required: false)

</body>
</html>
<div id="loading"></div>
<script>
    // Active sidebar menu
    $(document).ready(function () {
        // Expand sub menu
        var pathName = window.location.pathname;
        //console.log(pathName);
        //var currentPage = pathName.slice(pathName.lastIndexOf('/') + 1)
        var $currentA = $(".mt-2 ul li a[href='" + pathName + "']");
        //var $currentA = $(".sidebar-menu ul li a[href*='" + pathName + "']")
        $currentA.closest('a').addClass('active');
        $currentA.closest('.has-treeview').addClass('menu-open');
        $('.time2').timepicker({ 'timeFormat': 'H:i' });
    })
    //select2
    $('select').select2({
        width: '100%'
    });
    $('select').not('.with-search').select2({
        minimumResultsForSearch: Infinity,
    });
    $(".with-search").select2();
</script>


