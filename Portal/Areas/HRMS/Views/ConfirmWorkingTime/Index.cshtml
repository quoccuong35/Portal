@{
    ViewBag.Title = LanguageResource.ConfirmWorkingTime;
    string CurrentController = ConstController.ConfirmWorkingTime;
    string CurrentArea = ConstArea.HRMS;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
<div class="content-wrapper layout-fixed">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-4">
                    <h4 class="m-0 text-dark">@ViewBag.Title của bạn</h4>
                </div>
                <div class="col-sm-8">
                    <div class="float-right">
                        @HtmlExtensions.CreateButton(CurrentArea, CurrentController)
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
                @using (Html.BeginForm("_Search", null, FormMethod.Post, new { @id = "frmSearch" }))
                {
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-search-plus"></i> Tìm kiếm</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <label>@LanguageResource.FromDate</label>
                                    @Html.Editor("FromDate", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                </div>
                                <div class="col-sm-3">
                                    <label>@LanguageResource.ToDate</label>
                                    @Html.Editor("ToDate", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            @HtmlExtensions.SearchButton()
                        </div>
                        <!-- /.card-footer-->
                    </div>
                }
            </div>
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-body table-responsive">
                        <div id="divSearchResult"></div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section CustomScripts {
    <script>
        //load default and set event
        $(document).ready(function () {
            Portal.SearchInitial("@CurrentUrl");
            Portal.ShowMessage(window.location.href);
        });
    </script>
}