@model RolesModel
@{
    ViewBag.Title = LanguageResource.Edit + " " + LanguageResource.Permission_RolesModel.ToLower();
    string CurrentController = ConstController.Roles;
    string CurrentArea = ConstArea.Permission;

    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4> @ViewBag.Title @HtmlExtensions.BackButton(CurrentArea, CurrentController)</h4>

                </div>
                <div class="col-sm-6">
                    <div class="float-right">
                        @HtmlExtensions.SaveButton("btn-save", LanguageResource.Btn_Save)
                        @HtmlExtensions.SaveButton("btn-save-continue", LanguageResource.Btn_SaveAndContinue)
                    </div>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data", @id = "frmEdit" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(p => p.RolesId)
                    @Html.HiddenFor(p => p.RolesCode)
                    @Html.Hidden("RolesCodeValid", Model.RolesCode)
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-edit"></i> Thông tin dữ liệu</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-5">
                                    @Html.TooltipLabelForRequired(p => p.RolesCode)
                                    @Html.RequiredTextboxFor(p => p.RolesCode, new { @disabled = "disabled" })
                                </div>
                                <div class="col-md-5">
                                    @Html.TooltipLabelForRequired(p => p.RolesName)
                                    @Html.RequiredTextboxFor(p => p.RolesName, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    @Html.TooltipLabelForRequired(p => p.Actived)
                                    @Html.ActivedRadioButton(p => p.Actived)

                                </div>
                                <div class="col-md-5">
                                    @Html.TooltipLabelForRequired(p => p.OrderIndex)
                                    @Html.RequiredTextboxFor(p => p.OrderIndex, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section CustomScripts {
    <script>
        //load default and set event
        $(document).ready(function () {
            Portal.EditInitial("@CurrentUrl");
        });
    </script>
}
