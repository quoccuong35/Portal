@model IEnumerable<DepartmentCategory>
@{
    string CurrentController = ConstController.DepartmentCategory;
    string CurrentArea = ConstArea.MasterData;
}
<table  id="data-list" class="table table-head-fixed text-nowrap">
    <thead>
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.DepartmentCategoryCode)</th>
            <th>@Html.DisplayNameFor(p => p.DepartmentCategoryName)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.DepartmentCategoryCode)</td>
                <td>@Html.DisplayFor(p => item.DepartmentCategoryName)</td>
                <td class="text-center">@Html.DisplayFor(p => item.OrderIndex)</td>
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.DepartmentCategoryID)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.DepartmentCategoryName, item.DepartmentCategoryID)
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(function () {
        Portal.TableEdit();
    });
</script>