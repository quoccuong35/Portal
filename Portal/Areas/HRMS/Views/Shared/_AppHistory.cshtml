@model IEnumerable<ApprovalHistoryModel>
<div class="row">
    <table class="table table-head-fixed text-nowrap">
        <thead>
            <tr>
                <th>Người duyệt</th>
                <th>Trạng thái duyệt</th>
                <th>Thứ tự duyệt</th>
                <th>Duyệt</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model.OrderBy(it => it.ApprovalLevel))
                {
                    <tr>
                        <td>@item.EmployeeModel.FullName</td>
                        <td>@item.BrowseStatusModel.BrowseStatusName</td>
                        <td>@item.ApprovalLevel</td>
                        <td>
                            @{
                                bool duyet = false;
                                if (item.Account != null && item.Account.EmployeeModel != null)
                                {
                                    duyet = item.EmployeeId == item.Account.EmployeeModel.EmployeeId ? true : false;
                                }
                            }
                            @Html.CheckBox("Duyet", duyet, new { @disabled = true })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
